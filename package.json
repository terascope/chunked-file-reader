{
  "name": "@terascope/chunked-file-reader",
  "version": "0.1.1",
  "main": "index.js",
  "repository": "https://github.com/terascope/chunked-file-reader.git",
  "author": "Zach Burnham <zburnham@terascope.io>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint *.js spec lib",
    "lint:fix": "eslint --fix *.js spec lib",
    "test": "nyc -x spec/ --reporter=text-summary jasmine && nyc report --reporter=html",
    "report-coverage": "nyc report --reporter=text-lcov > coverage/coverage.lcov && codecov"
  },
  "nyc": {
    "cache": true,
    "all": true,
    "include": [
      "*.js",
      "lib/*.js"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "json"
    ]
  },
  "dependencies": {
    "bluebird": "^3.5.1"
  },
  "devDependencies": {
    "codecov": "^3.0.4",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jasmine": "^3.2.0",
    "jasmine-spec-reporter": "^4.2.1",
    "nyc": "^12.0.2"
  }
}
